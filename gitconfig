[user]
	name = Dan Albert
	email = dan@gingerhq.net
[branch]
	autosetuprebase = always
[color]
	ui = auto
[push]
	default = simple
[pull]
	rebase = true
[core]
	editor = vim
	autocrlf = input
	excludesfile = ~/.gitignore
[alias]
	cp = cherry-pick
	edit-unmerged = \
		"!f() { git ls-files --unmerged | cut -f2 | sort -u ; }; vim `f`"
	add-unmerged = \
		"!f() { git ls-files --unmerged | cut -f2 | sort -u ; }; git add `f`"
	merge-theirs = \
		"!f() { git ls-files --unmerged | cut -f2 | sort -u ; }; \
		git checkout --theirs  `f`"
	st = status
	br = branch
	co = checkout
	ci = "commit -v"
	shame = "blame"
	ls = "ls-files"
	lost = "! git fsck --full --no-reflogs --unreachable --lost-found | \
		grep commit | cut -d ' ' -f3 | xargs -n 1 git log -n 1 --pretty=oneline"
	ec = "! vim ~/.gitconfig"
	sync = "! repo sync -j128 -c . && repo prune ."
	upload = "! repo upload --cbr ."
	git = "! git"
	cplast = cherry-pick HEAD@{1}
	authors = "! f() { \
		git log --pretty='%aE' $1 | sort | uniq -c | sort -n; }; f"
	pop = reset --hard HEAD^
[commit]
	diff = true
[instaweb]
	browser = chrome
[imap]
	host = imaps://imap.gmail.com
	port = 993
	sslverify = false
	folder = "[Gmail]/Drafts"
[include]
	path = ~/.gitconfig_local
[column]
	ui = auto
	status = never
	branch = never
[log]
	abbrevCommit = true
[diff]
	renames = copies
	tool = meld
