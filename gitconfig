[user]
	name = Dan Albert
	email = danalbert@google.com
[branch]
	autosetuprebase = always
[color]
	branch = auto
	ui = auto
[push]
	default = simple
[pull]
	rebase = true
[core]
	editor = nvim
	excludesfile = ~/.gitignore
	pager = less -F -X
	autocrlf = input
[alias]
	cp = cherry-pick
	edit-unmerged = \
		"!f() { git ls-files --unmerged | cut -f2 | sort -u ; }; $EDITOR `f`"
	add-unmerged = \
		"!f() { git ls-files --unmerged | cut -f2 | sort -u ; }; git add `f`"
	merge-theirs = \
		"!f() { git ls-files --unmerged | cut -f2 | sort -u ; }; \
		git checkout --theirs  `f`"
	st = status -sb
	br = branch
	lsbr = \
		"for-each-ref --sort=-committerdate refs/heads/ --format='\
%(HEAD)%(align:left,32)%(refname:short)%(end)\
%(align:left,16)%(committerdate:relative)%(end)\
%(align:left,22)%(upstream:track)%(end) %(objectname:short) %(subject)'"
	co = checkout
	ci = "commit -v"
	shame = "blame"
	ls = "ls-files"
	lost = "! git fsck --full --no-reflogs --unreachable --lost-found | \
		grep commit | cut -d ' ' -f3 | xargs -n 1 git log -n 1 --pretty=oneline"
	ec = "! $EDITOR ~/.gitconfig"
	sync = "! repo sync ."
	upload = "! repo-helper upload"
	git = "! git"
	cplast = cherry-pick HEAD@{1}
	authors = "! f() { \
		git log --since=1.year.ago --no-merges --pretty='%aE' $1 \
			| sort | uniq -c | sort -n; }; f"
	pop = reset --hard HEAD^
	pr = push -u origin HEAD
[commit]
	diff = true
[instaweb]
	browser = chrome
[imap]
	host = imaps://imap.gmail.com
	port = 993
	sslverify = false
	folder = "[Gmail]/Drafts"
[include]
	path = ~/.gitconfig_local
[column]
	ui = auto
	status = never
	branch = never
[diff]
	renames = copies
	tool = vscode
[http]
	cookiefile = /usr/local/google/home/danalbert/.gitcookies
[pager]
	diff = diff-so-fancy | less --tabs=4 -RFX
	show = diff-so-fancy | less --tabs=4 -RFX
[color "diff-highlight"]
	oldNormal = red bold
	oldHighlight = red bold 52
	newNormal = green bold
	newHighlight = green bold 22
[color "diff"]
	meta = 227
	frag = magenta bold
	commit = 227 bold
	old = red bold
	new = green bold
	whitespace = red reverse
[merge]
	tool = vscode
[difftool]
	prompt = false
[log]
	mailmap = false
[mergetool "vscode"]
	cmd = "code --wait "
[difftool "vscode"]
	cmd = "code --wait --diff  "
